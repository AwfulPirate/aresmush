<div class="panel panel-info <% if @params[:tab] != "groups" %> hidden <% end %>">
    
    <div class="panel-body">

        <div class="form-group row">
            <label for="nationality" class="col-xs-2 col-form-label">Nationality:</label> 
            <select name="nationality">
                <% @nationalities['values'].each do |k, v| %>
                <option value="<%= k %>" <% if @user.group("Nationality") == k %> selected <% end %> ><%= k %> - <%= v %></option>
                <% end %>
            </select>
            <p class="cg-tip"><%= @nationalities['desc']%></p>
        </div>

        <div class="form-group row">
            <label for="position" class="col-xs-2 col-form-label">Position:</label> 
            <select name="position">
                <% @positions['values'].each do |k, v| %>
                <option value="<%= k %>" <% if @user.group("Position") == k %> selected <% end %> ><%= k %> - <%= v %></option>
                <% end %>
            </select>
            <p class="cg-tip"><%= @positions['desc']%></p>
        
        </div>
        
        <div class="form-group row">
            <label for="crew" class="col-xs-2 col-form-label">Crew:</label> 
            <select name="crew">
                <% @crews['values'].each do |k, v| %>
                <option value="<%= k %>" <% if @user.group("Crew") == k %> selected <% end %> ><%= k %> - <%= v %></option>
                <% end %>
            </select>
            <p class="cg-tip"><%= @crews['desc']%></p>
        </div>
        
        <div class="form-group row">
            <label for="rank" class="col-xs-2 col-form-label">Rank:</label> 
            <select name="rank">
                <% @ranks.each do |k| %>
                <option value="<%= k %>" <% if @user.rank == k %> selected <% end %> ><%= k %></option>
                <% end %>
            </select>
            
            <p class="cg-tip">Available ranks vary by faction.  See the wiki for details. If you select Shore as your "Crew" then please select the top blank line for Rank.</p>
        </div>

    </div>
</div>
